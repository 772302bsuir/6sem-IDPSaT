# 1. График и легенда
plot(sin, -iris$Sepal.Length, 2*iris$Sepal.Length, main = "Sin Plot",
xlab = "time", ylab = "conc", type = "l", ylim = c(-2, 2))
legend(8,-1, "sin(x)", lty = 1)
# 2.Диагональная матрица
diag(1, 8, 8)
# 3. Четырехмерный массив и вывод по срезам
mas <- array(seq(1,16), dim=c(2,2,2,2))
mas
aperm(mas, c(4,3,2,1), resize=TRUE)
# 4.Операции: сложения с числом, сложения с другим массивом,
#   возведения в степень, умножения на другой массив.
mas + 1
second_mas <- array(seq(1,16), dim=c(2,2,2,2))
mas + second_mas
mas^3
mas*second_mas
# 5.  Продемонстрировать решение системы уравнений: A*X=b.
mtrx<-matrix(c(1,2,3,4,5,6,7,8,0),byrow =TRUE, nrow=3)
mtrx
b=c(8,-2,8)
dim(b)<-c(3,1)
x<-solve(mtrx,b)
x
